<launch>
  <arg name="joy"        default="true" />
  <arg name="joy_dev"    default="$(optenv SPOT_JOY_DEVICE /dev/input/js0)" />
  <arg name="joy_config" default="$(eval optenv('SPOT_JOY_CONFIG', find('spot_driver') + '/config/teleop.yaml'))" />
  <arg name="should_remap" default="$(eval eval('_' + '_import_' + '_(\'os\')').uname().release.startswith('5'))" />

  <node pkg="interactive_marker_twist_server" type="marker_server" name="twist_marker_server" >
    <rosparam command="load" file="$(find spot_driver)/config/planar.yaml" />
    <param name="link_name" value="body" />
    <param name="robot_name" value="spot" />
  </node>

  <group if="$(arg joy)">
    <rosparam command="load" ns="bluetooth_teleop" file="$(arg joy_config)" />

    <group ns="bluetooth_teleop">
      <param name="joy_node/dev" value="$(arg joy_dev)" />

      <group if="$(arg should_remap)">
        <node pkg="joy" type="joy_node" name="joy_node">
          <remap from="joy" to="joy_to_remap" />
        </node>
        <node pkg="joystick_remapper" type="joystick_remapper.py" name="remapper">
          <remap from="joy_source" to="joy_to_remap" />
          <remap from="joy_dest" to="joy" />
          <param name="button_mapping" type="string" value="=" />
          <param name="axis_mapping" type="string" value="0 1 3 2 5 4 6 7" />
        </node>
      </group>

      <node pkg="joy" type="joy_node" name="joy_node" unless="$(arg should_remap)" />
      <node pkg="teleop_twist_joy" type="teleop_node" name="teleop_twist_joy"/>
    </group>
  </group>
</launch>
